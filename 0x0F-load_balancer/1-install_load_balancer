#!/usr/bin/env bash
# Install load balancer


load_balancer="\
frontend haproxy_balancer
    bind *:80
    mode http
    default_backend webservers

backend webservers
    balance roundrobin
    option forwardfor
    server 243845-web-01 52.87.153.255 check
    server 243845-web-02 54.85.142.216 check
"

# Update
sudo apt-get -y update
sudo apt-get -y upgrade

# HAProxy installation
sudo apt-get install software-properties-common
sudo add-apt-repository ppa:vbernat/haproxy-2.5
sudo apt-get update

# Install HAProxy
sudo apt-get install -y haproxy
sudo cp -a /etc/haproxy/haproxy.cfg{,.original}
echo "$load_balancer" > /etc/haproxy/haproxy.cfg

# Restart HAProxy
sudo service haproxy restart
